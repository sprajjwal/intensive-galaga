{{#section 'head'}}
  <link rel="stylesheet" href="/static/css/results.css">
{{!-- add css link or anythin else in here --}}
{{/section}}

{{#if isComplete}}<h1> THE WINNER IS {{winnerName}}</h1>{{/if}}

<table class="table table-hover table-dark mb-5 mt-5" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Score</th>
    </tr>
  </thead>
  <tbody>
    {{#each results}}
      <tr>
        <td>{{this.rank}}</td>
        <td>{{this.user}}</td>
        <td>{{this.score}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<button class="btn btn-success" onClick="window.location.reload();">UPDATE SCORES</button>